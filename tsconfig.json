{
    "compilerOptions": {
        "esModuleInterop": true,
        "module": "NodeNext",
        "target": "ESNext",
        "moduleResolution": "NodeNext",
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "noImplicitAny": true,
        // "strictNullChecks": true
        // "strictFunctionTypes": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": ["node_modules"],
    "ts-node": {
        "esm": true,
    },
}